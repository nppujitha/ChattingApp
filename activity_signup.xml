<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Signup"
    android:background="@drawable/wallpaper3">

    <EditText
        android:id="@+id/fNameET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="@string/fName"
        android:text="" />

    <EditText
        android:id="@+id/lNameET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="85dp"
        android:ems="10"
        android:hint="@string/lName"
        android:inputType="textPersonName"
        android:text="" />

    <EditText
        android:id="@+id/suEmailET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="142dp"
        android:ems="10"
        android:hint="@string/Email"
        android:inputType="textPersonName"
        android:text="" />

    <EditText
        android:id="@+id/chPwdET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="202dp"
        android:ems="10"
        android:hint="@string/ChoosePwd"
        android:inputType="textPassword"
        android:text="" />

    <EditText
        android:id="@+id/rptPwdET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="198dp"
        android:ems="10"
        android:hint="@string/RepeatPwd"
        android:inputType="textPassword"
        android:text="" />

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/fNameET"
        android:layout_alignLeft="@+id/fNameET"
        android:layout_marginBottom="131dp"
        android:text="@string/Cancel" />

    <Button
        android:id="@+id/signUpButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/fNameET"
        android:layout_alignRight="@+id/fNameET"
        android:layout_alignTop="@+id/cancelButton"
        android:text="@string/signUp" />
</RelativeLayout>