<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/messagelistview_shape">

    <TextView
        android:id="@+id/messageTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:layout_toLeftOf="@+id/deleteMessageButton"
        android:layout_toStartOf="@+id/deleteMessageButton"
        android:layout_marginTop="11dp"
        android:text="" />

    <TextView
        android:id="@+id/creatorNameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/messageTV"
        android:layout_alignStart="@+id/messageTV"
        android:layout_below="@+id/messageTV"
        android:text=""
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/deleteMessageButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/deleteMessage"
        app:srcCompat="@android:drawable/ic_menu_delete" />

    <TextView
        android:id="@+id/createdTimeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/deleteMessageButton"
        android:layout_alignRight="@+id/deleteMessageButton"
        android:layout_below="@+id/messageTV"
        android:textStyle="bold"
        android:text="" />
</RelativeLayout>